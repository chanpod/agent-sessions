{
  "name": "toolchain",
  "version": "1.22.7",
  "description": "ToolChain - Multi-terminal development environment manager",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:log": "node -e \"require('fs').writeFileSync('.dev.log','')\" && bash -c \"trap 'kill 0' SIGINT; npm run dev 2>&1 | tee -a .dev.log\"",
    "build": "vite build",
    "build:dist": "vite build && electron-builder",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "rebuild": "electron-rebuild -f -w node-pty",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@base-ui-components/react": "1.0.0-rc.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fontsource-variable/inter": "^5.2.8",
    "@monaco-editor/react": "^4.7.0",
    "@tabler/icons-react": "^3.36.1",
    "@tailwindcss/typography": "^0.5.19",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "diff": "^7.0.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.460.0",
    "monaco-editor": "^0.55.1",
    "node-pty": "^1.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "react-virtuoso": "^4.12.3",
    "remark-gfm": "^4.0.1",
    "shadcn": "^3.8.2",
    "sql.js": "^1.13.0",
    "tailwind-merge": "^2.5.0",
    "tw-animate-css": "^1.4.0",
    "vite-plugin-monaco-editor": "^1.1.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@base-ui/react": "^1.1.0",
    "@electron/rebuild": "^3.6.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/ui": "^4.0.17",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "happy-dom": "^20.3.4",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "vitest": "^4.0.17"
  },
  "build": {
    "appId": "com.toolchain.app",
    "productName": "ToolChain",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/sql.js/dist/sql-wasm.wasm",
        "to": "sql-wasm.wasm"
      },
      {
        "from": "resources/bin",
        "to": "bin"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "node-pty"
    ]
  }
}